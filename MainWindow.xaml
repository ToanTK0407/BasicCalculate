<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="557" Width="339" Background="#FF251E1E">

    <Window.Resources>
        <!-- Style cho button số -->
        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="Background" Value="#FF343131"/>
            <Setter Property="Foreground" Value="#FFF1EFEF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF454242"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF565353"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho button function -->
        <Style x:Key="FunctionButton" TargetType="Button" BasedOn="{StaticResource NumberButton}">
            <Setter Property="Background" Value="#FF403939"/>
        </Style>

        <!-- Style cho button equals -->
        <Style x:Key="EqualsButton" TargetType="Button" BasedOn="{StaticResource NumberButton}">
            <Setter Property="Background" Value="#FF4CC2FF"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Style cho memory buttons -->
        <Style x:Key="MemoryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF625D5D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="44"/>
            <RowDefinition Height="26"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Content="" Width="22" Height="22" Click="ButtonMenu" 
                        Style="{StaticResource MemoryButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="/icons8-menu-50.png"/>
                    </Button.Background>
                </Button>
                <TextBlock Text="Standard" Foreground="White" FontSize="14" 
                          VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>

            <Button Grid.Column="2" Width="22" Height="22" Click="ButtonHistory"
                    Style="{StaticResource MemoryButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/icons8-history-50.png"/>
                </Button.Background>
            </Button>
        </Grid>

        <!-- Display Top -->
        <TextBlock x:Name="SecondaryScreen" Grid.Row="1" Foreground="#FF625D5D" 
                   TextAlignment="Right" FontSize="24" Margin="15,0"/>

        <!-- Display Main -->
        <TextBlock x:Name="MainCalculateScreen" Grid.Row="2" Text="0" 
                   Foreground="#FFFFFEFE" FontSize="36" TextAlignment="Right" 
                   Margin="15,0"/>

        <!-- Memory Buttons -->
        <UniformGrid Grid.Row="3" Rows="1" Columns="6" Margin="10,0">
            <Button Content="MC" Click="ButtonMC" Style="{StaticResource MemoryButton}"/>
            <Button Content="MR" Click="ButtonMR" Style="{StaticResource MemoryButton}"/>
            <Button Content="M+" Click="ButtonMPlus" Style="{StaticResource MemoryButton}" Foreground="White"/>
            <Button Content="M-" Click="ButtonMSubtract" Style="{StaticResource MemoryButton}" Foreground="White"/>
            <Button Content="MS" Click="ButtonMS" Style="{StaticResource MemoryButton}" Foreground="White"/>
            <Button Content="Mˇ" Click="ButtonMDown" Style="{StaticResource MemoryButton}"/>
        </UniformGrid>

        <!-- Calculator Buttons -->
        <Grid Grid.Row="4" Margin="10,5,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Grid.Row="0" Grid.Column="0" Content="%" Click="ButtonRemainder" Style="{StaticResource NumberButton}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="CE" Click="ButtonClearEntry" Style="{StaticResource NumberButton}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="C" Click="Buttonclear" Style="{StaticResource NumberButton}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="⌫" Click="ButtonBackspace" Style="{StaticResource NumberButton}"/>

            <!-- Row 1 -->
            <Button Grid.Row="1" Grid.Column="0" Content="⅟x" Click="ButtonReciprocal" Style="{StaticResource NumberButton}"/>
            <Button Grid.Row="1" Grid.Column="1" Content="x²" Click="ButtonPowerTwo" Style="{StaticResource NumberButton}"/>
            <Button Grid.Row="1" Grid.Column="2" Content="²√x" Click="ButtonSqrt" Style="{StaticResource NumberButton}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="÷" Click="ButtonDivide" Style="{StaticResource NumberButton}"/>

            <!-- Row 2 -->
            <Button Grid.Row="2" Grid.Column="0" Content="7" Click="ButtonSeven" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="2" Grid.Column="1" Content="8" Click="ButtonEight" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="2" Grid.Column="2" Content="9" Click="ButtonNine" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="2" Grid.Column="3" Content="x" Click="ButtonMultiple" Style="{StaticResource NumberButton}"/>

            <!-- Row 3 -->
            <Button Grid.Row="3" Grid.Column="0" Content="4" Click="ButtonFour" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="3" Grid.Column="1" Content="5" Click="ButtonFive" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="6" Click="ButtonSix" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="3" Grid.Column="3" Content="-" Click="ButtonSubtract" Style="{StaticResource NumberButton}"/>

            <!-- Row 4 -->
            <Button Grid.Row="4" Grid.Column="0" Content="1" Click="ButtonOne" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="4" Grid.Column="1" Content="2" Click="ButtonTwo" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="4" Grid.Column="2" Content="3" Click="ButtonThree" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="4" Grid.Column="3" Content="+" Click="ButtonPlus" Style="{StaticResource NumberButton}"/>

            <!-- Row 5 -->
            <Button Grid.Row="5" Grid.Column="0" Content="+/−" Click="ButtonChangeSign" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="5" Grid.Column="1" Content="0" Click="ButtonZero" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="5" Grid.Column="2" Content="." Click="ButtonDecimalPoint" Style="{StaticResource FunctionButton}"/>
            <Button Grid.Row="5" Grid.Column="3" Content="=" Click="ButtonEqual" Style="{StaticResource EqualsButton}"/>
        </Grid>
    </Grid>
</Window>